<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.lendme.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/borrow"
        android:name="com.example.lendme.ui.borrow.Borrow"
        android:label="Borrow"
        tools:layout="@layout/fragment_borrow" />
    <fragment
        android:id="@+id/lend_page"
        android:name="com.example.lendme.ui.lend.Lend"
        android:label="Lend"
        tools:layout="@layout/fragment_lend" />
    <fragment
        android:id="@+id/messageFragment"
        android:name="com.example.lendme.ui.messages.MessageFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_message" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.lendme.ui.messages.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/confirmationFragment"
        android:name="com.example.lendme.ui.borrow.ConfirmationFragment"
        android:label="Confirmation Page"
        tools:layout="@layout/fragment_confirmation" />
    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.lendme.ui.borrow.ItemFragment"
        android:label="Item view"
        tools:layout="@layout/fragment_item" />
    <fragment
        android:id="@+id/itemsFragment"
        android:name="com.example.lendme.ui.borrow.ItemsFragment"
        android:label="Item List"
        tools:layout="@layout/fragment_items" />
    <fragment
        android:id="@+id/postItemFragment"
        android:name="com.example.lendme.ui.lend.PostItemFragment"
        android:label="Post an Item"
        tools:layout="@layout/fragment_post_item" />
</navigation>