<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="control_label" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">10sp</item>
    </style>
    <style name="page_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="control_input" parent="control_label">
        <item name="android:gravity">start</item>
        <item name="borderWidth">2sp</item>
        <item name="background">@drawable/edit_text</item>
    </style>
    <style name="page_footer" parent="page_title">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">10sp</item>
    </style>
    <style name="flat_button" parent="control_label">
        <item name="backgroundColor">#ffffff</item>
        <item name="android:textColor">#111111</item>
    </style>
    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
    </style>

    <style name="Theme_AlertDialog"></style>
</resources>